// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Institution {
  id          String   @id @default(cuid())
  slug        String   @unique
  name        String
  city        String?
  websiteUrl  String?
  courses     Course[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Course {
  id            String   @id @default(cuid())
  slug          String   @unique
  title         String
  caoCode       String
  degreeType    String
  durationYears Int
  subject       String
  awardLevel    Int       // 6, 7, or 8
  institutionId String
  institution   Institution @relation(fields: [institutionId], references: [id])
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}